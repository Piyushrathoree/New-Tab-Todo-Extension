{
    "manifest_version": 3,
    "name": "Minimal Todo New Tab",
    "description": "A beautiful, minimal todo app for your new tab.",
    "version": "1.0",
    "icons": {
        "128": "icon128.png"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "permissions": [],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "todo-extension@example.com",
            "strict_min_version": "109.0"
        }
    }
}
